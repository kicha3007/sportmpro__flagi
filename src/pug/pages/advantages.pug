section.it-advantages
	.it-all-title
		|	Почему выгодно заказывать у нас?
	.it-container
		.it-advantages__wrap
			ul.it-advantages__list
				- var advantagesList = {'Скидка до 40% ' : "в зависимости от объемов заказа", "Выбор цвета " : "можем изготовить форму любого цвета" , "Любой размер": "можем сшить форму по меркам игрока" ,"Стиль и оформление" : "можем разработать логотип и оформление для команды"};
				- var i = 1;
				-   for (var key in advantagesList) {
				li.it-advantages__item
					.it-advantages__inner-item
						.it-advantages__top
							.it-advantages__img-box
								img.it-advantages__img(src="static/img/advantages/" + i + ".png", alt='')
						.it-advantages__title
							|	#{key}
						.it-advantages__desc
							|	#{advantagesList[key]}
					- i++;
				- }